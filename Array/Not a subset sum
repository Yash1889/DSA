//C++
//GFG
//TIME COMPLEXITY :- O(n)
//SPACE COMPLEXITY :- O(1)


class Solution {
  public:
    long long findSmallest(vector<int> &arr) {
        // Your code goes here.
        long long ans = 1;
        for(int x:arr){
            if(x>ans)return ans;
            ans+=x;
        }
        return ans;
    }
};
